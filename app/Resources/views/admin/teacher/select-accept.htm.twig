{% extends 'base.htm.twig' %}

{% block service %}active{% endblock %}
{% block pageTitle %}Select Options{% endblock %}
{% block body %}
    <style>
        .required:after {
            content:" *";
            color:red;
        }
        label{
            text-transform: capitalize;
            font-weight: bold;
        }
    </style>

    <article>
        <div class="article_inner">
            <div id="form-data" class="form form-wrap" style="">
                {{ form_start(form,{'attr':{'id':'neworm'}}) }}
                <h2>Basic Details</h2>

                <div>
                    <div class="column">

                        <div class="form-row">
                            <div class="form-widget">
                                {{ form_row(form.subject, { 'attr': {'id': 'login_form_credentials_username'} }) }}
                            </div>
                            <div class="form-errors"></div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="form-row">
                            <div class="form-widget">
                                {{ form_row(form.class, { 'attr': {'id': 'login_form_credentials_username'} }) }}
                            </div>
                            <div class="form-errors"></div>
                        </div>

                    </div>
                    <div class="button-row">
                        <input id="new" type="submit" value="Continue">

                        <a href="{{ path('my-pending-assigned-books-teacher') }}" id="restore">
                            Cancel </a>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </article>


    <aside class="">
        <i class="fa fa-question-circle help-icon"></i>
        <p>ALL the fields marked (*) are required.</p>
        <p>Select Subject and Class to Filter.</p>
    </aside>



{% endblock %}

